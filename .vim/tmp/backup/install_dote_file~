#!/bin/bash

HELLO = 
count = 0


## clone repo
#[ -d dotfiles ] && mv dotfiles dotfiles~
#git clone https://github.com/kballenegger/dotfiles.git

for f in `ls -A | grep -e '^\.'`
do
if [ -f $f ];then
    echo "$(pwd)/$f ist ein Data " #Since to use cp --symbolic-link , the path have to be absolute 
    cp --symbolic-link "$(pwd)/$f" "$(pwd)/to" 
elif [ -d $f ];then 
    HELLO[count] = $f 
    count=$(( $count + 1 ))
else
    echo "Done"
fi 
done

echo "${HELLO[*]} ist ein Verzeiniss"
