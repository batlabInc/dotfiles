    private JPasswordField passwordField;
    private JTextField textField;
    private JButton btnEinloggen;
    private JButton btnRegistrieren;
    private JButton btnExit;
    
    public Einlog() {
        setResizable(false);
        setBackground(SystemColor.info);
        getContentPane().setLayout(null);
        
        
        //this.addWindowListener(this);
        
        JPanel panel = new JPanel();
        panel.setBounds(0, 0, 547, 10);
        getContentPane().add(panel);
        
        btnEinloggen = new JButton("einloggen");
        btnEinloggen.setBounds(148, 211, 89, 23);
        getContentPane().add(btnEinloggen);
        btnEinloggen.setActionCommand(de.hs_mannheim.konstante.Ui_Kommand.ui_einlog);
        
        btnRegistrieren = new JButton("Registrieren");
        btnRegistrieren.setBounds(247, 211, 98, 23);
        getContentPane().add(btnRegistrieren);
        btnRegistrieren.setActionCommand(de.hs_mannheim.konstante.Ui_Kommand.ui_registrieren);
        
        btnExit = new JButton("Exit");
        btnExit.setBounds(355, 211, 89, 23);
        getContentPane().add(btnExit);
        btnExit.setActionCommand(de.hs_mannheim.konstante.Ui_Kommand.ui_exit);
        
        passwordField = new JPasswordField();
        passwordField.setBounds(246, 138, 198, 20);
        getContentPane().add(passwordField);
        
        textField = new JTextField();
        textField.setBounds(247, 101, 197, 20);
        getContentPane().add(textField);
        textField.setColumns(10);
        
        JLabel lblBenutzerName = new JLabel("Benutzer Name");
        lblBenutzerName.setBounds(99, 104, 89, 14);
        getContentPane().add(lblBenutzerName);
        
        JLabel lblPasswort = new JLabel("Passwort");
        lblPasswort.setBounds(128, 141, 46, 14);
        getContentPane().add(lblPasswort);
        
        JMenuBar menuBar = new JMenuBar();
        setJMenuBar(menuBar);
        
        JMenu mnFile = new JMenu("File");
        menuBar.add(mnFile);
        
        JMenu mnAbout = new JMenu("About");
        menuBar.add(mnAbout);
        
        JMenuItem menuItem = new JMenuItem("New menu item");
        mnAbout.add(menuItem);
        
        setVisible(true); 
    }
    
    public void addObservabÄºe(ActionListener listenForbuttons){
        btnEinloggen.addActionListener(listenForbuttons);
        btnRegistrieren.addActionListener(listenForbuttons);
        btnExit.addActionListener(listenForbuttons);
    }

    
    @SuppressWarnings("deprecation")
    public void updateUserInput(UserModellForEinlog ein){
        ein.setUsername(textField.getText()); 
        ein.setPassword(passwordField.getText());
    }

    
