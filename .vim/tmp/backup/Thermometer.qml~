import QtQuick 2.0 

Rectangle {
    width: 200 
    height: width 
    color : "red"

        Rectangle{
            x: foo.x + foo.width
            id : this_rec
            y: foo.y + foo.height  - 18  
            height: img.height 
            width: img.width 
            color: "transparent"

            Image{
                id: img 
                source : "arrow-180.png"
            }

            DropArea{
                anchors.fill : parent 
                NumberAnimation on y{
                }
            
            }


            MouseArea{
                id: dragArea
                anchors.fill: parent 
                drag.target: parent 
                drag.axis: Drag.YAxis 
                drag.minimumY: foo.y                
                drag.maximumY: foo.y + foo.height  


                onReleased: {
                    console.log(parent.y)
                }

            }


        }

    Rectangle{
        id: foo 
        anchors.centerIn : parent 
        color: "black"
        width : 100 
        height : boule.height +  rect.height 
        Canvas{
            id: canvas 
            anchors.fill : parent 

            onPaint:{

            var ctx = canvas.getContext('2d') 
            var counter = boule.height + rect.height 

            ctx.strokeStyle = "green"
            ctx.font = "bold 12pt Calibri,Geneva,Arial"
            ctx.fillStyle = "green"
            
            for( var i=height; i>=0; i--) 
            {
                ctx.save()
                ctx.beginPath()
                if( i%20 == 0 )
                {
                
                    ctx.moveTo( width, i ) 
                    ctx.lineTo( width-10, i )
                    ctx.stroke()
                    ctx.fillText( i , width-30, i + 2 )
                }
                else if( i == 0 )
                {
                    ctx.moveTo( width, i ) 
                    ctx.lineTo( width-10, i  )
                    ctx.stroke()
                    ctx.fillText( i , width-30, i+2)
                }
                else{}//just do nothing
            
            }
            
            }
        
        }


        Rectangle{
            width : 50
            id: boule 
            height: 50  
            radius : width*0.5  
            anchors.bottom: parent.bottom 
            /* code hier */
        }//end of Rectangle 

        Rectangle{
            id: rect
            width : 20 
            height:100  

            /*anchors.bottom : boule.top */
            y: boule.y -height + 4 //4 um die Ball mit Zylender zusammen zu mischen 
            x : boule.x + boule.width/2 - width/2  

            /* code hier */
        }//end of Rectangle 

    }//end of Rectangle 


}//end of Recktangle 
