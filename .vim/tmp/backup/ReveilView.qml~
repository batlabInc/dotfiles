import QtQuick 2.0 

Rectangle{

width : 280 
height : 30  

Row{
anchors.fill : parent 

Rectangle{
    
    id: zeiteinstellung 
    width: 60   
    height : parent.height 
    color : "gray"
    border.color : "black" 
    border.width : 2 

    Text{
        /*anchors.fill : parent */
        anchors.centerIn : parent 
        text : "00:00"
    }

}

Rectangle{
    id : tage 
    width : 200 
    height : parent.height 

    Column {
        anchors.fill : parent 
        spacing : 6 


        Rectangle{
            width : parent.width 
            height: 12  
            Text{
                text : "Beschreibung "
                }
            }
        

    Rectangle{
        width : parent.width  
        height : 5
        ListView{
        anchors.fill : parent 
        orientation : ListView.Horizontal
        model :  TagListModel{}   
        delegate : TagListDelegate{}

        }
    }
    }
}

Rectangle{
    id : checkBox 
    width: 20 
    height : parent.height  
    color : "green"

    MouseArea {
        anchors.fill : parent 
        onClicked : checkBox.state == 'clicked' ? checkBox.state = "something" : checkBox.state = 'clicked'
    }

    states:[
            State{
                name : "clicked" 
                PropertyChanges { target: checkBox; color : "blue" }
            },
    
            State{
                name : "something" 
                PropertyChanges { target: checkBox; color : "green" }
            }
    ]
}

} //end of row 


}//end of rectangle 
