#ifndef PATIENT_H
#define PATIENT_H value

#include <qobject.h> 
#include <qstring.h> 


class Patient: public QObject
{

    Q_OBJECT 


        Q_PROPERTY( QString name READ getName WRITE setName NOTIFY nameChanged) 
        QString m_name; 
        Q_PROPERTY( QString vorname READ getVorname WRITE setVorname NOTIFY vornameChanged) 
        QString m_vorname; 

    public: 
    Patient(QObject* parent=NULL):QObject(parent){} 

    QString getName(){
        return m_name;
    }

    void setName(QString name){
        m_name = name;
    }

    QString getVorname(){
        return m_vorname;
    }

    void setVorname(QString vorname){
        m_vorname = vorname;
    }

signals: 
    void nameChanged();
    void vornameChanged(); 

}; 


#endif
