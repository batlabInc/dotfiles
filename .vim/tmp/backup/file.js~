

var fs = require('fs'); 
var path = require('path');


//Read directory containts
fs.readdir(__dirname , function( err , files){
    if( err ) console.error( err ); 

    console.log( files ); 
}); 


//read the file 
fs.readFile( path.join(__dirname, "foo.js"), function (err, data) {
    
    if(err) return console.error( err ); 

    console.log(data);

    //make the data readdable 
    console.log(data.toString('utf8', 0, data.length )); 
}); 



fs.mkdir(path.join(__dirname + "testDir"), function () {
   console.log("Dir have been create"); 
}); 




