

package de.hs_mannheim.db;

import java.sql.Connection; 
import java.sql.Statement; 
import java.sql.DriverManager; 
import java.sql.PreparedStatement; 
import java.sql.Statement; 


public class DbConnection {
    private Connection conn;  
    private String dbDriver; 
    private String dbUrl; 
    //private DbWriter writer; 
    //private DbReader reader; 


    public DbConnection(String driver, String dbUrl)
    {
        this.dbDriver = dbDriver; 

        try {
            
            Class.forName(driver); 
            this.dbUrl = dbUrl; 
            this.conn = DriverManager.getConnection(dbUrl,"fab","fab");  
        } catch(Exception e){

            System.out.println("Fehler beim offnen von DatenBank \n\t"+dbUrl); 
            System.out.println("\t"+e.getMessage());

        }
    }
    

    public void transactionStart() throws Exception {
        conn.setAutoCommit(false); 
    }  




}//end of Class 

