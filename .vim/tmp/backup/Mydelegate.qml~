                    ctx.fillText(AvailableVirtualGeometrieX, 10,80);
                    ctx.fillText(AvailableVirtualGeometrieY, 10,90);
                    ctx.fillText(VirtualGeometrieX, 10,100);
                    ctx.fillText(VirtualGeometrieY, 10,110);
                    ctx.fillText(PhysicalSizeHeight, 10,120);
                    ctx.fillText(PhysicalSizeWidth, 10,130);
                    ctx.fillText(SizeHeight, 10,140);
                    ctx.fillText(SizeWidth, 10,150);
                    ctx.fillText(GeometrieX, 10,160);
                    ctx.fillText(GeometrieY, 10,170);
                    ctx.fillText(LogicalDotsPerInch, 10,180);
                    ctx.fillText(LogicalDotsPerInchY, 10,190);
                    ctx.fillText(LogicalDotsPerInchX, 10,200);
                    ctx.fillText(PhysicalDotsPerInch, 10,210);
                    ctx.fillText(PhysicalDotsPerInchY, 10,220);
                    ctx.fillText(PhysicalDotsPerInchX, 10,230);
