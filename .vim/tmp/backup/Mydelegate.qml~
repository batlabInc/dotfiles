import QtQuick 2.0
import QtQuick.Controls 1.0


Rectangle {

    height: 500
    width: height



    Canvas{
        width: parent.width
        height: parent.width
        //anchors.centerIn: parent
        onPaint: {

            var ctx = getContext('2d')
            ctx.fillStyle = "darkblue";
            ctx.fillRect(0,0,width,width)



            ctx.beginPath()
            ctx.fillStyle = "white";
            ctx.font = "italic "+10+"pt Arial ";
            ctx.fillText(Name, 10,20);
                    ctx.fillText(PrimaryOrientation, 10,30);
                    ctx.fillText(AvailableGeometrieX, 10,40);
                    ctx.fillText(AvailableGeometrieY, 10,50);
                    ctx.fillText(AvailableSizeWidht, 10,60);
