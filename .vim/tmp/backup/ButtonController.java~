
package de.hs_mannheim.ui_Controller;

import java.awt.event.ActionEvent;

import javax.swing.JFrame;

import javax.swing.JOptionPane;

import de.hs_mannheim.SRNInterface.I_SRN_Window;
import de.hs_mannheim.ui.ConfirmExitWindows;

class ButtonController implements java.awt.event.ActionListener {


    JFrame view; 

    public ButtonController(I_SRN_Window view)
    {
        this.view = (JFrame)view;      
    }
        
    public void actionPerformed(ActionEvent e) 
    {

        String cmd = e.getActionCommand(); 

        if(cmd == de.hs_mannheim.konstante.Ui_Kommand.ui_exit)
        {
            ConfirmExitWindows foo = 
                new ConfirmExitWindows(ConfirmExitWindows.exitConfirmation , view); 

                    if(foo.showDialog() == JOptionPane.YES_OPTION) 
                    {
                        view.setVisible(false); 
                        System.exit(0); 
                    }
        }
    }

}

