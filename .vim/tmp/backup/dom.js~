
/*
 *Manipulation de la DOM ( Document Object Model )
 *Avec le javascript. 
 *NB : DOM : est une API qui decrit les element HTML et XML 
 */


/* Structure de ma DOM 
 *<!DOCTYPE html>
 *<html>
 *<head>
 *    <title> DOM Manipulation </title>
 *    <meta charset="utf-8" />
 *</head>
 *<body>
 *    <div id="monDiv">
 *
 *        <ul id="listeCouleur" class="classListe">
 *            <li>Vert</li>
 *            <li>Rouge</li>
 *            <li>Jaune</li>
 *            <li>Violet</li>
 *            <li>Maron</li>
 *        </ul>
 *
 *        <ul id="listePays" class="classListe">
 *            <li>Cameroun</li>
 *            <li>Gabon</li>
 *            <li>Togo</li>
 *            <li>Cote D ivoire</li>
 *            <li>Allemagne</li>
 *        </ul>
 *
 *    </div>
 *</body>
 *</html>
 */






function myGetElementsByTagName() {

    /*
     *Cette Fonction renvoie une liste avec tous les 
     *Elements enfants contenue dans la balise html 
     */
    var listeEnfants = document.getElementsByTagName('li'); 
    var monText = ''; 

    for (var i = 0, c = listeEnfants.length;i<c; i++) 
         {
             monText += listeEnfants[i]; 
         }

         alert(monText); 
         console.log(''+monText+'\t'+listeEnfants.length); 
         
}

function myGetElementById() {
    
    /*
     *Cette Fonction ne renvoie qu un element unique, 
     *car il ne peut y avoir deux(ou plus ) meme id dans un document html
     */

    var listePays = document.getElementById('listePays'); 
    
    alert(listePays);
}

/*
 *Modern Queries Selector: 
 *Les deux fonctions : 
 *querySelector(); 
 *querySelectorAll()
 */

function myQuerySelector() {
    var query = document.querySelector('#listePays li');
    alert(query); 
}


myGetElementsByTagName();
myGetElementById(); 
myQuerySelector(); 













