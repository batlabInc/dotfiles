package de.hs_mannheim.bluetooth;

//import java.io.InputStream; 
//import java.io.OutputStream; 

public interface IService {

    /*******************************************************
     * Als Server: 
     * *Bluetooth wird wird angemacht falls aus !  
     * Als Client: 
     * *Bluetooth wird angemacht falls aus ! 
     * *Bluetooth wird als Visible eingestellt. 
     * *****************************************************/
    public boolean startBluetoothService(); 
    

    /**********************************************************
     *Hier wird eingestellt in Welcher Modus der Sabre 
     *funktionnieren muss . Also die Benutzung modus von Sabre  
     * Argument ist in Datei Konstante.java zu finden. Diese 
     * kann 3 Werte annehmen: 
     * 1*) modus_client  
     * 2*) modus_server 
     * 3*) modus_p2p
     **********************************************************/
    public void setService(String serviceModus); 


    
}

