#!/bin/bash 
set -e #enable argument


latex_engine="pdflatex"
data_dir='/home/batlab/Dropbox/pandoc-templates'
output="output.pdf"
template=""
depth=1


pdf()
{
pandoc --data-dir="$data_dir" --latex-engine="$latex_engine" --template "$template" --table-of-contents --toc-depth "$depth" $3 -o $output 
}

slidy()
{
	pandoc --data-dir="$data_dir" -t "$template" $3 -o $output 
}


case $1 in 
	mode)
	  case $2 in 
		pdf)
			template="default.latex"
			depth=3
			echo "yes pdf"
			echo "$3"
			pdf 
		;;
		slide) 
			template="beamer"
			depth=1
			echo "yes slide"
			echo "$3"
			slidy 
		;;
	  esac
	;;
esac 

exit 1



