
#ifndef TCP_CLIENT_H
#define TCP_CLIENT_H 

#include <QObject>
#include <QString>
#include <QTcpSocket>

class TCPClient : public QObject 
{

    Q_OBJECT 
    QTcpSocket _ssocket; 

    public:
    explicit TCPClient( QObject* parent = 0); 
     
    void connectHost( const &QString host, const int ip){ _ssocket.connectToHost( host,ip); }

    bool send( const &QString name, const &QString message); 

signals: 
    bool newMessage( const &QString name, const &QString message); 

public slots:
        void readFromServer();
        void connected(){ _ssocket.instal  } 
        void disconnected(); 
        void hostFound(); 
        void errorFound( QAbstractSocket::SocketError error ); 
        
}; 

#endif
