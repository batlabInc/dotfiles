
package de.hs_mannheim.bluetooth;
import android.bluetooth.*; 


public abstract class BluetoothModule implements IService{


    String bluetoothService; 

    /*
     *Defaultmaessig wird der Bluetooth module als 
     *Server benutzt. 
     * **/
    public BluetoothModule()
    {
        setService(de.hs_mannheim.bluetooth.Konstante.modus_server); 
    }
    
    public BluetoothModule(String service)
    {
        this.setService(service); 
    }


    public void setService(String serviceModus)
    {
        bluetoothService = serviceModus; 
    }


    public boolean startBluetoothService()
    {
        boolean isOK=false;  
       //Testen ob den Device Bluetooth verfügt 
       BluetoothAdapter b_adapt = BluetoothAdapter.getDefaultAdapter(); 
        
       if(b_adapt == null) 
       {
        //Terminal verfügt ueber keine bluetooth Hardware; 
       }
    }
}

