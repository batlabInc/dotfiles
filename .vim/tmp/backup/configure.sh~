#!/bin/bash 

#configure tfp Server 
sudo su 
touch /etc/inetd.conf 
touch /etc/default/atftpd 

echo "$HOME/atftpd_export" >> /etc/inetd.conf 
echo "$HOME/atftpd_export" >> /etc/default/atftpd  
exit 

#configure NFS 
sudo su 
echo  "$HOME/nfs_server *(rw,no_root_squash)" >> /etc/exports  

/etc/init.d/nfs-kernel-server restart
exit 

#Setting up Samba Shares 
#Samba Password is a blank passwort 

echo geben Sie ihre User Name ein: 
read this_user 

sudo smbpasswd -a $this_user 

sudo su 

echo "[$this_user]"          >> /etc/samba/smb.conf 
echo "comment\= $this_user"  >> /etc/samba/smb.conf 
echo "read only \= no"       >> /etc/samba/smb.conf 
echo "locking \= no"         >> /etc/samba/smb.conf 
echo "path \= $HOME/Public"  >> /etc/samba/smb.conf 
echo "create mask \= 0644"   >> /etc/samba/smb.conf 
echo "directory mask \= 0770">> /etc/samba/smb.conf 

/etc/init.d/samba restart 

#Configure Sudoers 

echo "$this_user ALL = NOPASSWD: /usr/bin/rpm, /opt/freescale/ltib/usr/bin/rpm" >> /etc/sudoers 




