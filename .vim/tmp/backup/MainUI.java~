package de.hs_mannheim.ui;

import javax.swing.JFrame;
import javax.swing.JMenuBar;
import javax.swing.JMenu;
import javax.swing.JMenuItem;
import java.awt.Color;
import java.awt.SystemColor;
import javax.swing.UIManager;

public class MainUI extends JFrame{
	
	public final static String action_NeuOrdener = "new_ordner"; 
	public final static String ActionNeuDatei = "new_data"; 
	
	
	
	public MainUI() {
		setResizable(false);
		getContentPane().setForeground(SystemColor.windowBorder);
		setForeground(UIManager.getColor("ScrollBar.trackHighlightForeground"));
		
		JMenuBar menuBar = new JMenuBar();
		setJMenuBar(menuBar);
		
		JMenu mnDatei = new JMenu("Datei");
		menuBar.add(mnDatei);
		
		JMenu mnNeu = new JMenu("Neu");
		mnDatei.add(mnNeu);
		
		JMenuItem mntmOrdner = new JMenuItem("Ordner");
		mnNeu.add(mntmOrdner);
		mntmOrdner.setActionCommand(action_NeuOrdener);
		
		JMenuItem mntmDatei = new JMenuItem("Datei");
		mnNeu.add(mntmDatei);
		mntmDatei.setActionCommand(ActionNeuDatei);
		
		JMenuItem mntmEmail = new JMenuItem("Email");
		mnNeu.add(mntmEmail);
		
		JMenuItem menuItem = new JMenuItem("Senden/Teilen");
		mnDatei.add(menuItem);
		
		JMenuItem mntmNewMenuItem = new JMenuItem("Beenden");
		mnDatei.add(mntmNewMenuItem);
		
		JMenu mnBearbeiten = new JMenu("Bearbeiten");
		menuBar.add(mnBearbeiten);
		
		JMenuItem mntmNewMenuItem_1 = new JMenuItem("R\u00FCckg\u00E4ngig (Ctrl-Z)");
		mnBearbeiten.add(mntmNewMenuItem_1);
		
		JMenuItem mntmNewMenuItem_2 = new JMenuItem("Auschneiden (Ctrl-X)");
		mnBearbeiten.add(mntmNewMenuItem_2);
		
		JMenuItem mntmNewMenuItem_3 = new JMenuItem("Kopieren (Ctrl-C)");
		mnBearbeiten.add(mntmNewMenuItem_3);
		
		JMenuItem mntmNewMenuItem_4 = new JMenuItem("Einf\u00FCgen (Ctrl-V)");
		mnBearbeiten.add(mntmNewMenuItem_4);
		
		JMenuItem mntmNewMenuItem_5 = new JMenuItem("Alles ausw\u00E4hlen (Ctrl-A)");
		mnBearbeiten.add(mntmNewMenuItem_5);
		
		JMenuItem mntmNewMenuItem_6 = new JMenuItem("L\u00F6schen");
		mnBearbeiten.add(mntmNewMenuItem_6);
		
		JMenuItem mntmImOrdnerBewegen = new JMenuItem("In Ordner Bewegen");
		mnBearbeiten.add(mntmImOrdnerBewegen);
		
		JMenuItem mntmInOrdnerKopieren = new JMenuItem("In Ordner kopieren");
		mnBearbeiten.add(mntmInOrdnerKopieren);
		
		JMenu mnWerkzeuge = new JMenu("Werkzeuge");
		menuBar.add(mnWerkzeuge);
		
		JMenuItem mntmSynchronisieren = new JMenuItem("Synchronisieren");
		mnWerkzeuge.add(mntmSynchronisieren);
		
		JMenuItem mntmNewMenuItem_7 = new JMenuItem("Sicherheitkopie");
		mnWerkzeuge.add(mntmNewMenuItem_7);
		
		JMenuItem mntmNewMenuItem_8 = new JMenuItem("Wiederherstellen");
		mnWerkzeuge.add(mntmNewMenuItem_8);
		
		JMenuItem mntmNewMenuItem_9 = new JMenuItem("Passwort Andern");
		mnWerkzeuge.add(mntmNewMenuItem_9);
		
		JMenuItem mntmNewMenuItem_10 = new JMenuItem("Passwort generieren");
		mnWerkzeuge.add(mntmNewMenuItem_10);
		
		JMenu mnNewMenu = new JMenu("Hilfe");
		menuBar.add(mnNewMenu);
		
		JMenuItem mntmNewMenuItem_11 = new JMenuItem("Hilfe");
		mnNewMenu.add(mntmNewMenuItem_11);
		
		JMenuItem mntmNewMenuItem_12 = new JMenuItem("\u00DCber ...... ");
		mnNewMenu.add(mntmNewMenuItem_12);
	}

}
