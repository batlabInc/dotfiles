

#include "config.h" 

#define i2c_0 7 
#define i2c_1 19
#define i2c_2 26 

void 
init_i2c()
{

//Testen ob i2c-modules ( 0,1,2) 
//enable sind nach reset 
if (    PCONP |  (1 << i2c_0)
    && (PCONP | (1<< i2c_1))    
    && (PCONP | (1<< i2c_2))) 
{
//etwas tun um dies zu erfahren 
//standard ausgabe  , 
//evt die modules die man nicht braucht 
//auschalten. 
}
else
{
// Standard ausgabe die informieren 
// dass die i2c module nicht zur 
// Verfuegung stehen . 
//oder die anschalten . 

    PCONP|=  (PCONP & (1<< i2c_0)
}


}
