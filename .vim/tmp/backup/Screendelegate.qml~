
import QtQuick 2.0
import modell 1.0 
Rectangle {
    id: content
    anchors { left:parent.left; right:parent.right }
    width: parent.width*0.5
    height: column.implicitHeight+10
    border.width:2
    border.color: "darkblue"
    radius:10
    clip: true
    color: "#cf9255"
    opacity: 0.7

   Behavior on scale { NumberAnimation {easing.type:Easing.OutQuad}}

    MouseArea {
        anchors.fill: parent
        onPressed: {
            parent.opacity = 1
       }
        onReleased: {
            parent.opacity = 0.7
        }
    }

    Row {
        spacing: 30

        Column {
            id: column
            spacing: 5
            Text {id: text1; text: " <i> Name:   </i>" + "<b>"+ Name +"</b>";}
        }
    }
}
