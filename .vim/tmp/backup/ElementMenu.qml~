import QtQuick 2.0 

Rectangle{
    property int this_width : 200 
    property int this_height: 200  
    property var title   : "Telefon"


    width: this_width 
    height: this_height 

    color : "lightblue"

    MenuTitle
        {
            id: title
            anchors.top: parent.top 
            x: parent.width/2 - width/2 
            title: "Telefon" 
        }

        Rectangle{
            anchors.top: title.bottom
            anchors.leftMargin: 8  
            anchors.rightMargin: 8 
            width : this_width - 10 
            height: width  

            color : "green"
            border.width: 2 
            border.color: "grey"
            radius: 12

        /* code hier */
        }//end of Rectangle 

}
