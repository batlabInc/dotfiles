

var http = require('http'); 
var url  = require('url'); 


function start(handler, routeur ) {

    var server = http.createServer( callback_server ); 

    server.listen(8000); 

    function callback_server(req,res) {
        var pathname = url.parse(req.url).pathname; 
        routeur( handler, pathname ); 
        res.writeHead(200, {'Content-Type' : 'text/plain'}); 
        res.write('hello World'); 
        res.end(); 
    }

    function request_handler(req) {

}

function respond_handler(res) {
}
    
}

exports.start = start;  
