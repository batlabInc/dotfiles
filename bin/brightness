#! /bin/sh

set -e

current_brightness=$(cat /sys/devices/pci0000:00/0000:00:02.0/backlight/acpi_video1/brightness)

if [[ "$@" == 'up' ]]; then
  brightness=$(($current_brightness + 1))
elif [[ "$@" == 'down' ]]; then
  brightness=$(($current_brightness - 1))
elif [[ "$@" != "" ]]; then
  brightness=$@
else
  echo $current_brightness
  exit 0
fi

echo $brightness | sudo tee /sys/devices/pci0000:00/0000:00:02.0/backlight/acpi_video1/brightness
