#!/bin/bash 
set -e #enable argument


latex_engine="xelatex"
data_dir='/home/batlab/Dropbox/pandoc-templates'

case $1 in 
	mode)
	  case $2 in 
		pdf)
      #template='/home/batlab/downloads/mytemplate.tex'
      template='latex'
			depth=3
			output='output.pdf'
      echo "$data_dir"

      pandoc -s -S\
      --latex-engine="$latex_engine"\
      --variable mainfont="Georgia"\
      --variable sansfont="Arial"\ 
      --variable fontsize="12pt"\ 
      --variable version="1.10"\
      --template="$template"\ 
      --table-of-contents --toc-depth "$depth" -o "$output" "$3" 
		;;
		slide) 
			template='revealjs'
			depth=1
			output='output.html'
      echo "$pwd"
      pandoc --data-dir "$data_dir"\
      --self-contained -s -t "$template"\
      -o "$output" "$3" 
		;;
	  esac
	;;
esac 


