#!/bin/bash 
set -e #enable argument

##What needed 
#Footer
#Header 

#Table of content 

#code snippet with dark background 

# $1 welche modus 
# $2 pdf, slide 
# $3 input name  


latex_engine="xelatex"
data_dir='/home/batlab/Dropbox/pandoc-templates'

case $1 in 
	mode)
	  case $2 in 
		pdf)
      #template='/home/batlab/downloads/mytemplate.tex'
      template='default.latex'
			depth=3
			output='output.pdf'

      pandoc -s -S -N --data-dir="$data_dir"\
      --variable mainfont=Georgia\
      --variable sansfont=Arial\ 
      --variable monofont="Bitstream Vera Sans Mono"\
      --variable fontsize=12pt --variable version=1.10\
      --latex-engine="$latex_engine"\
      --template "$template"\ 
      --toc -c $HOME/Dropbox/VorlesungWS2014/SOE/SOE_VORTRAG/src/project.css\
      -s --highlight-style zenburn\
      --table-of-contents --toc-depth $depth -o $output $3 
		;;
		slide) 
			template='default.slidy'
			depth=1
			output='output.pdf'
		;;
	  esac
	;;
esac 




 #pandoc --data-dir /home/batlab/Dropbox/pandoc-templates --self-contained -s -t revealjs  --css /home/batlab/Dropbox/pandoc-templates/reveal.js/css/theme/default.css foo.txt -o foo.html

#pandoc --data-dir /home/batlab/Dropbox/pandoc-templates --self-contained -s -i -t s5  foo.txt -o foo.html

#pandoc --data-dir /home/batlab/Dropbox/pandoc-templates --self-contained -s -t dzslides  foo.txt -o foo.html
