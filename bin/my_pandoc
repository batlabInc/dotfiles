#!/bin/bash 
set -e #enable argument



case $1 in 
	mode)
	  case $2 in 
		pdf)
      latex_engine="xelatex"
      template='latex'
			depth=3 
			output='output.pdf'
      mainfont='Georgia'
      sansfont='Arial'
      fontsize='12pt'

      config = " --table-of-contents"


      # -s 
      # -S 
      # --table-of-contents produce table of contents 
      # -chapters : separate Chapters with blank page 
      pandoc -s -S --table-of-contents -chapters\
      --latex-engine="$latex_engine" \
      --variable mainfont="$mainfont" \
      --variable sansfont="$sansfont"  \ 
      --variable fontsize="$fontsize"   \ 
      --template="$template"             \ 
      --table-of-contents                 \
      --toc-depth "$depth"                 \
      "$3"\ #input 
      -o "$output" 
		;;

		slide) 
			template='revealjs'
			depth=1
			output='output.html'

      pandoc\
        --self-contained -s -t "$template"\
      -o "$output" "$3" 
		;;
	  esac
	;;
esac 



 #pandoc --table-of-contents --chapters --variable mainfont=Georgia --variable sansfont=Arial --variable monofont="Bitstream Vera Sans Mono" --variable fontsize=12pt --variable version=1.10 --latex-engine=xelatex presentation.md -o Umdruck.pdf

#pandoc --data-dir /home/batlab/.pandoc/tempates --self-contained -s -t revealjs vortrag.md -o foo.html -V revealjs-url:/home/batlab/.pandoc/templates/reveal.js/ --table-of-contents -c /home/batlab/.pandoc/templates/reveal.js/css/theme/night.css --highlight-style pygments
